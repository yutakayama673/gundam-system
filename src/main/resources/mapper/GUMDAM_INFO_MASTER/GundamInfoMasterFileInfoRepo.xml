<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.gundamsystem.mapper.home.GundamInfoMasterFileInfoMapper">

  <select id="findByMSNum" resultType="com.example.gundamsystem.model.home.GumdamInfoMasterFileInfo">
  SELECT
    image_front AS imageFront,
    image_back AS imageBack
  FROM GUMDAM_INFO_MASTER
  <where>
    <if test="mobileSuitNumber != null and mobileSuitNumber != ''">
      AND MOBILE_SUIT_NUMBER = #{mobileSuitNumber}
    </if>
  </where>
</select>

</mapper>
